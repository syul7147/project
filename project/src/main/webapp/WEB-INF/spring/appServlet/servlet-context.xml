	<!-- 인터셉터 bean 설정 -->
	<beans:bean id="inter1" class="kr.ezen.project.Test.InterceptorDemo1"></beans:bean>
	<beans:bean id="loginInterceptor" class="kr.ezen.project.Test.LoginInterceptor"></beans:bean>
	<beans:bean id="UserInterceptor" class="kr.ezen.project.Test.UserInterceptor"></beans:bean>
	<beans:bean id="adminInterceptor" class="kr.ezen.project.Test.AdminInterceptor"></beans:bean>
	<interceptors>
		<interceptor>
			<mapping path="/board/view.do"/>
			<mapping path="/member/memberList.do"/>
			<beans:ref bean="loginInterceptor"/>
		</interceptor>
		<interceptor>
			<mapping path="/admin/*"/>
			<exclude-mapping path="/admin/home.do"/>
			<exclude-mapping path="/admin/login.do"/>
			<exclude-mapping path="/admin/adminLoginOk.do"/>
			<beans:ref bean="adminInterceptor"/>
		</interceptor>
		<interceptor>
			<mapping path="/user/myPage.do"/>
			<mapping path="/user/cartList.do"/>
			<beans:ref bean="UserInterceptor"/>
		</interceptor>
		
		<interceptor>
			<mapping path="/test1"/>
			<beans:ref bean="inter1"/>
		</interceptor>
		<interceptor>
			<mapping path="/test2"/>
			<beans:bean class="kr.ezen.project.Test.InterceptorDemo2"/>
		</interceptor>
		<interceptor>
			<mapping path="/**"/>
			<beans:bean class="kr.ezen.project.Test.InterceptorDemo3"/>
		</interceptor>
		<interceptor>
			<mapping path="/**"/>
			<exclude-mapping path="/*"/>
			<beans:bean class="kr.ezen.project.Test.InterceptorDemo4"/>
		</interceptor>
	</interceptors>
	
	
	<context:component-scan base-package="kr.ezen.project, kr.ezen.controller" />
</beans:beans>













